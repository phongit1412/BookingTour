<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <title>Document</title>
</head>

<body>
    <div align="center">
        <h1>Danh Sách Khách Hàng Theo Tour</h1>
    </div>
    <div class="container" style="margin-top: 50px">
        <div class="nav justify-content-center tblData " style="overflow-y: scroll; height: 500px ">
            <table class="table table-hover ">
                <thead>
                    <tr>
                        <th>Tên Khách hàng</th>
                        <th>Số ĐT</th>
                        <th>Email</th>
                        <th>Ngày khởi hành</th>
                        <th>Số lượng người lớn</th>
                        <th>Số lượng trẻ nhỏ</th>
                        <th>Hình thức thanh toán</th>
                    </tr>
                    <% user.forEach(function(i){ index=0;index++;%>
                        <tr>
                            <td>
                                <%=i.name%>
                            </td>
                            <td>
                                <%=i.sdt%>
                            </td>
                            <td>
                                <%=i.email%>
                            </td>
                            <td>
                                <%= moment (i.date).format('DD MMM YYYY'); %>
                            </td>
                            <td>
                                <%=i.adult%>
                            </td>
                            <td>
                                <%=i.children%>
                            </td>
                            <td>
                                <%=i.payment%>
                            </td>
                        </tr>
                        <%})%>
                </thead>
                <tbody id="data"></tbody>
            </table>
        </div>
    </div>
    <div align="center">
        <button id="submit" type="button" class="btn btn-primary">Xuất danh sách</button>
        <a href="/admin/adminpage/cus" class="btn btn-primary">Trở về trang quản lý</a>
    </div>

</body>

</html>